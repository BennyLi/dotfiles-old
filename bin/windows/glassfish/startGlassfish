#!/bin/bash

# PUT THIS FILE INTO ~/bin TO USE IT GLOBALLY IN YOUR GIT BASH!

GLOBE_CS_PATH="/c/DEV/git/Globe/Dev/GlobeCS/"

function update_tibco {
  local cpwd cmd
  cpwd=$(pwd)
  cmd="gradlew updateTibco -Pbranch=$(getBranch)"
  cd $GLOBE_CS_PATH
  echo "Updating TIBCO EMS"
  echo "[CMD] $cmd"
  $cmd
  cd $cpwd
}

update_tibco
echo "Starting Glassfish server..."
asadmin start-domain --debug=true domain1
