#!/bin/bash
cmd="$1"
shift
if [ $# -eq 1 ]; then
  $COMSPEC /c "$cmd"\ "$1"
elif [ $# -eq 2 ]; then
  $COMSPEC /c "$cmd"\ "$1"\ "$2"
elif [ $# -eq 3 ]; then
  $COMSPEC /c "$cmd"\ "$1"\ "$2"\ "$3"
elif [ $# -eq 4 ]; then
  $COMSPEC /c "$cmd"\ "$1"\ "$2"\ "$3"\ "$4"
elif [ $# -eq 5 ]; then
  $COMSPEC /c "$cmd"\ "$1"\ "$2"\ "$3"\ "$4"\ "$5"
elif [ $# -eq 6 ]; then
  $COMSPEC /c "$cmd"\ "$1"\ "$2"\ "$3"\ "$4"\ "$5"\ "$6"
elif [ $# -eq 7 ]; then
  $COMSPEC /c "$cmd"\ "$1"\ "$2"\ "$3"\ "$4"\ "$5"\ "$6"\ "$7"
elif [ $# -eq 8 ]; then
  $COMSPEC /c "$cmd"\ "$1"\ "$2"\ "$3"\ "$4"\ "$5"\ "$6"\ "$7"\ "$8"
elif [ $# -eq 9 ]; then
  $COMSPEC /c "$cmd"\ "$1"\ "$2"\ "$3"\ "$4"\ "$5"\ "$6"\ "$7"\ "$8"\ "$9"
else
  echo "Too many arguments! Max allowed: 9"
  exit 1
fi
