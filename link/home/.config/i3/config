# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym odiaeresis resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"


# Shortcuts to open SSH sessions
set $ssh_launcher Connect to [s] DiskStation, [r] Raspberry Pi
mode "$ssh_launcher" {
	bindsym s exec $terminal -e "ssh admin@192.168.1.66"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Shift+s mode "$ssh_launcher"

# Display output
set $hdmi_display "HDMI1"
set $internal_display "eDP1"
set $display_mode Activate [h]dmi [i]ntern [b]oth displays
mode "$display_mode" {
	bindsym h exec xrandr --output $hdmi_display --auto --output $internal_display --off, mode "default"
	bindsym i exec xrandr --output $hdmi_display --off --output $internal_display --auto, mode "default"
	bindsym b exec xrandr --output $hdmi_display --auto --output $internal_display --auto, mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Shift+d mode "$display_mode"

# Power Saving
set $power_mode Do [s]hutdown, [r]eboot the computer?
mode "$power_mode" {
	bindsym s exec shutdown -h now
	bindsym r exec reboot

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Shift+p mode "$power_mode"

bindsym XF86MonBrightnessUp exec "xbacklight -inc 10"
bindsym XF86MonBrightnessDown exec "xbacklight -dec 10"

